gem 'jquery-rails'

# For creating fake data
gem "faker", "~> 1.2.0"

# Create the User / Sessions functionality
gem "devise", "~> 3.2.1"
gem "devise-encryptable"

# Schema in the models
gem "annotate", "~> 2.5.0"

# mysql stuff
gem "activerecord-mysql-adapter", "~> 0.0.1"
gem "mysql2"

# Design Stuff
gem 'font-awesome-less'


